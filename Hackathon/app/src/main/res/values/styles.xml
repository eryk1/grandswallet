<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boton_ingresos" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="estilo_formularios_n2v2" parent="AppTheme">
        <item name="android:background">@drawable/edit_text_shape_n2v2</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="titulo_naranja" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="paraRadioButtons">
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

</resources>
